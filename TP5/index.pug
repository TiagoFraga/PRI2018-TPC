extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h3 Arquivo de Música Digital
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Tipo
                        th Lista de Títulos
               
                    tr
                        td Abertura/Concerto
                        td
                            ul.w3-ul
                                each o in ind.obras
                                    if o.tipo == 'Abertura/Concerto'
                                        li
                                            a(href='http://localhost:5000/obra/'+o.id)= o.titulo
                    tr
                        td Ligeiro/Fantasia
                        td
                            ul.w3-ul    
                                each o in ind.obras    
