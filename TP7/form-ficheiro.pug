extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Upload de um ficheiro
            .w3-container
                form.w3-container(action='/',method='POST', enctype='multipart/form-data')
                    label.w3-text-teal
                        b Ficheiro
                    input.w3-input.w3-border.w3-light-grey(type='file',name='ficheiro')
                    label.w3-text-teal
                        b Descricao
                    input.w3-input.w3-border.w3-light-grey(type='text',name='desc')
                    input.w3-btn.w3-blue-grey(type='submit', value='Enviar')
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Ficheiros Recebidos
            .w3-container
                table.w3-table-all
                    each ficheiro in lista
                        tr
                            th Ficheiro
                            td= ficheiro.nome
                        tr
                            th Status
                            td= ficheiro.status
            footer.w3-container.w3-teal
                address Gerado por formApp by tmf
