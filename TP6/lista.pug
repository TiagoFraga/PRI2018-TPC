extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Teses
            .w3-container
                table.w3-table-all
                    each tese in lista
                        tr
                            th Tese
                            td
                                table.w3-table-all
                                    tr
                                        th Nome:
                                        td= tese.nome
                                    tr
                                        th Número / Identificador:
                                        td= tese.numero
                                    tr
                                        th Curso:
                                        td= tese.curso
                                    tr
                                        th Intituição:
                                        td= tese.inst
                                    tr
                                        th Titulo da Tese:
                                        td= tese.titulo
                                    tr
                                        th Data:
                                        td= tese.data
                                    tr
                                        th Tipo:
                                        td= tese.tipo
            footer.w3-container.w3-teal
                p
                    a(href='http://localhost:4006/')
                        | Voltar à Página Principal
                address Gerado por Gerado por Registo de Teses App de TMF.
